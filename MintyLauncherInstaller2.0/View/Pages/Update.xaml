<Page x:Class="MintyLauncherInstaller2._0.View.Pages.Update"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      Height="450" Width="800"
      Title="Install"
      Background="Transparent">
        <Grid>
        <Border CornerRadius="20" Background="#292c33">
            <Border CornerRadius="20,20,20,20" BorderBrush="#3d414a" BorderThickness="5">
                    <Border.Background>
                        <ImageBrush ImageSource="/View/Images/StartupBackground.png"/>
                    </Border.Background>
                    <Border>
                        <Button x:Name="Button" Content="Update" Margin="544,334,35,35" BorderBrush="Black" Background="#FFFFA600" FontSize="30" FontFamily="Comic Sans MS" Click="Update_Click">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="20"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </Border>
                </Border>
            </Border>
        </Grid>
    </Page>
